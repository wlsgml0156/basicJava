  <h3>* JSTL 제어문 결과 *</h3>
<!-- 
    request.getParameter("name")와
    동일 param.name
 -->  
  <c:set var="name" value="${param.name}"></c:set>
  <c:set var="age"  value="${param.age}"></c:set>
  이름 : ${name} / <c:out value="${name}"></c:out>
  <br>
  나이 : ${age}  / <c:out value="${age}"></c:out>
  <br>
  
  <!-- 조건문 -->
  <c:if test="${name=='soldesk'}">솔데스크</c:if> 
  
  
  
  
  
  
  
  
  
  
